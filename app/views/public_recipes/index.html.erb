
<h1>Public Recipes</h1>

  <div class="recipe-public-true">
    <% @public_recipes.each do |public_recipes| %>
    <div>
      <div class="plan-grid">
        <div class = "recipe-d">
          <p>
            <strong>Name:</strong>
            <%= public_recipes.name %>
          </p>
          <p>
            <strong>by: </strong>
            <%= public_recipes.user.name%>
          </p>
        </div>
        <div class="ar">
          <p>
              <span>Total food items to buy: </span>
              <span>&nbsp;<%= public_recipes.foods.length %></span>
          </p>
          <p>
              <span>Total Price:</span>
              <span>&nbsp;<%= @prices.sum %></span>
          </p>
        </div>
      </div>
      <p>
        <%= link_to "Show this recipe", public_recipes %>
      </p>
    </div>  
    <% end %>
  </div>